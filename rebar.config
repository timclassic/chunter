{erl_opts, [{parse_transform, lager_transform},
            %% warnings_as_errors,
            debug_info]}.
{edoc_opts, [{dir, "../../doc"}]}.
{cover_enabled, true}.
{eunit_opts, [{report,{eunit_surefire,[{dir,"."}]}}]}.
{deps,
 [
  {fifo_lager, ".*", {git, "https://github.com/project-fifo/fifo_lager.git", {branch, "master"}}},
  {bugsnag, ".*", {git, "https://github.com/project-fifo/bugsnag-erlang.git", {branch, "master"}}},
  {cuttlefish, ".*", {git, "https://github.com/tsloughter/cuttlefish.git", {branch, "develop"}}},

  {jsx, "1.4.5"},
  {erlsom, ".*", {git, "https://github.com/willemdj/erlsom.git", {ref, "bc48604f7a74440da66aa7dba95a3bf634fdf138"}}},
  {ranch, "1.1.*", {git, "https://github.com/extend/ranch.git", {tag, "1.1.0"}}},
  erltrace,
  jsxd,
  fifo_utils,
  {fifo_s3, ".*", {git, "https://github.com/project-fifo/fifo_s3.git", {branch, "master"}}},
  {libsniffle, ".*", {git, "https://github.com/project-fifo/libsniffle.git", {branch, "test"}}},
  {libchunter, ".*", {git, "https://github.com/project-fifo/libchunter.git", {branch, "test"}}},
  {libsnarl, ".*", {git, "https://github.com/project-fifo/libsnarl.git", {branch, "test"}}},
  {libhowl, ".*", {git, "https://github.com/project-fifo/libhowl.git", {branch, "test"}}},
  smurf,
  {fifo_dt, ".*", {git, "https://github.com/project-fifo/fifo_dt.git", {branch, "master"}}},
  {fifo_spec, ".*", {git, "https://github.com/project-fifo/fifo_spec.git", {branch, "test"}}},
  eper,
  recon
 ]}.

{plugins, [pc]}.

{project_plugins, [{rebar3_cuttlefish, "0.7.1"}]}.

%% Cuttlefish config
{cuttlefish,
 [{file_name, "chunter.conf.example"},
  {schema_discovery, false}]}.


{profiles,
 [
  {prod, [{relx, [{dev_mode, false}]}]},
  {lint,  [{plugins, [{rebar3_lint, {git, "https://github.com/project-fifo/rebar3_lint.git", {tag, "0.1.4"}}}]}]}
 ]}.

{relx,
 [{release, {chunter, "0.7.3"},
   [
    sasl,
    chunter,
    {cuttlefish, load},
    {recon, load},
    {eper, load}
   ]},
  {semver, ""},
  {dev_mode, true},
  {include_erts, true},
  {generate_start_script, false},
  {overlay_vars, "rel/vars.config"},
  {overlay,
   [{copy, "rel/files/erl", "erts-\{\{erts_vsn\}\}/bin/erl"},
    {copy, "rel/files/nodetool", "erts-\{\{erts_vsn\}\}/bin/nodetool"},
    %% for some reason this is only in default
    {copy, "_build/prod/bin/cuttlefish", "bin/cuttlefish"},

    {copy, "share", "share"},
    {copy, "_build/default/lib/fifo_utils/priv/update_config.sh", "share/"},
    {template, "schema/chunter.schema", "share/schema/00-chunter.schema"},
    {template, "_build/default/lib/bugsnag/priv/bugsnag.schema", "share/schema/01-bugsnag.schema"},
    {template, "_build/default/lib/libsnarl/priv/libsnarl.schema", "share/schema/02-libsnarl.schema"},
    {template, "_build/default/lib/mdns_client_lib/priv/mdns_client.schema", "share/schema/03-mdns_client.schema"},
    {template, "_build/default/lib/fifo_lager/priv/lager.schema", "share/schema/04-lager.schema"},
    {template, "schema/erlang_vm.schema", "share/schema/05-vm.schema"},
    {template, "rel/files/chunter", "bin/chunter"},
    {template, "rel/files/update", "bin/update"},
    {template, "rel/files/chunter.version", "etc/chunter.version"},
    {copy, "LICENSE", "LICENSE"},
    {copy, "README.md", "README.md"}]}]}.
